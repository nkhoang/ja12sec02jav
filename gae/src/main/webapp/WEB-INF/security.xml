<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
              http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd">
    <beans:bean class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />
    <http create-session="always" >
        <anonymous/>
        <!-- Will be main page -->
        <intercept-url pattern="/index.html" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <!-- Handle login -->
        <intercept-url pattern="/user/login.html*" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <!-- for AJAX login -->
        <intercept-url pattern="/user/authenticate.html*" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <!-- for user panel -->
        <intercept-url pattern="/user/userPanel.html*" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <!-- Just a reference for access role reference -->
        <intercept-url pattern="/user/admin" access="ROLE_ADMIN"/>
        <!-- jax-rs interface -->
        <intercept-url pattern="/services/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <!-- Vocabulary -->
        <intercept-url pattern="/vocabulary/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
        <intercept-url pattern="/sessioncleanup/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>



        <!-- Serve VN Gold price -->
        <intercept-url pattern="/item/viewAll.html*" access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>
        <intercept-url pattern="/chart/view.html*" access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>
        <intercept-url pattern="/data/chartData.html*" access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>
        <intercept-url pattern="/data/clearAllVNGoldPrice.html*"
                       access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>
        <intercept-url pattern="/data/clearAll.html*" access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>
        <intercept-url pattern="/service/gold/goldVN.html*" access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>
        <intercept-url pattern="/service/gold/goldVNData.html*"
                       access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>
        <intercept-url pattern="/service/gold/goldVNAll.html*"
                       access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>

        <!-- Serve IN Gold price -->
        <intercept-url pattern="/service/gold/goldIN.html*" access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>
        <!-- Exchange rate -->
        <intercept-url pattern="/service/gold/exchangeRate.html*"
                       access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>
        <intercept-url pattern="/remote_api*/*" access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>

        <intercept-url pattern="/item/register.html*" access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>
        <intercept-url pattern="/facebook/**" access="IS_AUTHENTICATED_ANONYMOUSLY,ROLE_ADMIN,ROLE_USER"/>

        <intercept-url pattern="/**/*.html*" access="ROLE_ADMIN,ROLE_USER"/>

        <logout logout-url="/logout.html" logout-success-url="/login.html?loggedout=true"/>
        <form-login login-page="/vocabulary/index.html"
                    authentication-failure-url="/user/login.html?error=true"
                    login-processing-url="/login_check.html" default-target-url="/user/login.html"
                    always-use-default-target="true"/>
    </http>
    <!-- must have alias otherwise it will fail to detect exactly which authentication manager -->
    <authentication-manager alias="authenticationManager">
        <authentication-provider user-service-ref="userDao">
            <password-encoder ref="passwordEncoder"/>
        </authentication-provider>
    </authentication-manager>
    <!-- method security -->
    <global-method-security pre-post-annotations="enabled"/>
</beans:beans>
